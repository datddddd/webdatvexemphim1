@model List<ck.Models.Movie>

<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        @for (int i = 0; i < Model.Count; i++)
        {
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-label="Slide @(i + 1)"></button>
        }
    </div>
    <div class="carousel-inner">
        @foreach (var (movie, index) in Model.Select((m, i) => (m, i)))
        {
            <div class="carousel-item @(index == 0 ? "active" : "")">
                <img src="@movie.MovieImage2" class="d-block w-100" alt="@movie.MovieName">
                <div class="carousel-caption d-md-block">
                    <h3 class="col_oran">@movie.genre?.Name</h3>
                    <h1 class="text-white mt-3">@movie.MovieName</h1>

                    <ul class="mb-0 mt-4">
                        <li class="d-inline-block">
                            <a class="button" asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">
                                <i class="fa fa-check-circle me-1 font_14"></i> More Info
                            </a>
                        </li>
                        <li class="d-inline-block ms-2">
                            <a class="button_1" href="@Url.Action("GetTicket", "Showtimes", new { movieId = movie.Id })">
                                <i class="fa fa-check-circle me-1 font_14"></i> Get Ticket
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        }
    </div>
</div>
