@model ck.Models.Movie

<div class="col-md-3 col-sm-6">
    <div class="trend_2i position-relative">
        <div class="trend_2i1">
            <img src="@Model.MovieImage" class="w-100" alt="@Model.MovieName">
        </div>
        <div class="trend_2i2 bg_back position-absolute w-100 h-100 top-0 px-4">
            <h6 class="font_14 text-light">@Model.genre.Name / @Model.Capacity Minute</h6>
            <h5>
                <a asp-controller="Movies" asp-action="Details" asp-route-id="@Model.Id">@Model.MovieName</a>
            </h5>
            <h6 class="mb-0 mt-3">
                <a class="button_1 p-2 px-3 font_14"
                   asp-controller="Showtimes"
                   asp-action="GetTicket"
                   asp-route-movieId="@Model.Id">
                    Get Ticket
                </a>
            </h6>
        </div>
    </div>
</div>
