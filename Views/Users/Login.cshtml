@{
    Layout = "MoviesLayout";
}

<form asp-controller="Users" asp-action="Login" method="post">
    <section id="login" class="p_3">
        <div class="container-xl">
            <div class="row login_1">
                <div class="col-md-12">
                    <div class="login_1m p-5 px-4 bg-light w-50 mx-auto">
                        <!-- Hiển thị thông báo lỗi -->
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.Error
                            </div>
                        }

                        <h6 class="mb-3 fw-bold">Username</h6>
                        <input class="form-control" placeholder="Username" type="text" name="username" required>
                        <label class="fw-bold mb-2">Password:</label>
                        <div class="input-group">
                            <input class="form-control" type="password" name="password" id="password" required />
                            <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">
                                👁
                            </button>
                        </div>

                        <div class="login_1mi row mt-3">
                            <div class="col-md-6 col-6">
                                <div class="login_1mil">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="customCheck1" name="RememberMe">
                                        <label class="form-check-label" for="customCheck1">Remember Me</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-6">
                                <div class="login_1mir text-end">
                                    <h6 class="mb-0"><a asp-controller="Users" asp-action="ForgotPassword">Forgot Password?</a></h6>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 text-center">
                            <button type="submit" class="button_2 btn btn-primary w-100">LOGIN</button>
                        </div><div class="mt-4 text-center">
                            <a asp-controller="Users" asp-action="ExternalLogin" asp-route-provider="Google">Sign in with Google</a>
                        </div>
                        


                        <p class="mt-3 mb-0 text-center">
                            Don't have an account?
                            <a class="fw-bold a_tag" href="/Users/Register">Create One</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
<script>
    function togglePassword() {
        var passwordInput = document.getElementById("password");
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
        } else {
            passwordInput.type = "password";
        }
    }
</script>
