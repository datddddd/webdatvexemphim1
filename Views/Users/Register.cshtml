@model ck.Models.User
@{
    Layout = "MoviesLayout";
}
<form asp-controller="Users" asp-action="Register" method="post">
    <section id="login" class="p_3">
        <div class="container-xl">
            <div class="row login_1">
                <div class="col-md-12">
                    <div class="login_1m p-5 px-4 w-50 mx-auto bg-light">
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.Error
                            </div>
                        }
                        <h6 class="mb-3 fw-bold">Username</h6>
                        <input class="form-control" placeholder="Username" asp-for="Username" required />

                        <h6 class="mb-3 fw-bold mt-4">Email</h6>
                        <input class="form-control" placeholder="Email Address" asp-for="Email" type="email" required />

                        <h6 class="mb-3 fw-bold mt-4">Password</h6>
                        <input class="form-control" placeholder="Password" asp-for="Password" type="password" required />
                       


                        <div class="form-check mt-3">
                            <input type="checkbox" class="form-check-input" id="customCheck1" required />
                            <label class="form-check-label" for="customCheck1">
                                Agree to our <a class="fw-bold" asp-controller="Pages" asp-action="Terms">terms & conditions</a>
                            </label>
                        </div>

                        <div class="mt-4 text-center">
                            <button type="submit" class="button_2 btn btn-primary w-100">SIGN UP</button>
                        </div>

                        <p class="mt-3 mb-0 text-center">
                            Already have an account?
                            <a class="fw-bold col_oran" href="/Users/Login">Login</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
