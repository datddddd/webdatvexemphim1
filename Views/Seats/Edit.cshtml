@model ck.Models.Seat

@{
    ViewData["Title"] = "Edit";
    Layout = "AdminLayout";

}

<h1 class="mt-4">Edit</h1>

<h4 class="mb-4">Seat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="SeatNumber" class="control-label">Seat Number</label>
                <input asp-for="SeatNumber" class="form-control" />
                <span asp-validation-for="SeatNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="IsAvailable" />
                <label class="form-check-label" for="IsAvailable">
                    @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ShowtimeId" class="control-label">Showtime</label>
                <select asp-for="ShowtimeId" class="form-control" asp-items="ViewBag.ShowtimeId"></select>
                <span asp-validation-for="ShowtimeId" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
